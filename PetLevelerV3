-- Modern Button Function
local function createButton(text, posY)
    local btn = Instance.new("TextButton", frame)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 16
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.BackgroundColor3 = Color3.fromRGB(60, 120, 255)
    btn.BackgroundTransparency = 0.15
    btn.Size = UDim2.new(0, 240, 0, 38)
    btn.Position = UDim2.new(0.5, -120, 0, posY)

    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 10)

    local btnStroke = Instance.new("UIStroke", btn)
    btnStroke.Color = Color3.fromRGB(255, 255, 255)
    btnStroke.Thickness = 1.2
    btnStroke.Transparency = 0.4

    -- Hover effect
    btn.MouseEnter:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(80, 140, 255)
    end)
    btn.MouseLeave:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(60, 120, 255)
    end)

    return btn
end

-- Buttons
local button = createButton("Set Age to 50", 86)
local addAgeButton = createButton("Add +1 Age", 132)

-- Footer Label
local footer = Instance.new("TextLabel", frame)
footer.Text = ":Tiktok: @Uncle.Sam"
footer.Font = Enum.Font.Gotham
footer.TextSize = 13
footer.TextColor3 = Color3.fromRGB(200, 200, 200)
footer.BackgroundTransparency = 1
footer.Size = UDim2.new(1, 0, 0, 20)
footer.Position = UDim2.new(0, 0, 1, -22)

-- Get equipped pet tool
local function getEquippedPetTool()
    character = player.Character or player.CharacterAdded:Wait()
    for _, child in pairs(character:GetChildren()) do
        if child:IsA("Tool") and child.Name:find("Age") then
            return child
        end
    end
    return nil
end

-- Store base weight for each pet by its tool instance
local baseWeightMap = {}

-- Function to update pet name with new Age and KG based on formula
local function updatePetName(tool, newAge)
    -- Get current name
    local name = tool.Name

    -- Extract base name (before any bracket)
    local baseName = name:match("^(.-)%s*%[") or name

    -- Extract base weight or get from stored map
    local baseWeight = baseWeightMap[tool]
    if not baseWeight then
        -- Extract current KG from name
        local kg = name:match("%[(%d+%.?%d*)%s*KG%]")
        if kg then
            baseWeight = tonumber(kg) - (0.33 * newAge)  -- Calculate baseWeight assuming current age
            baseWeight = math.max(baseWeight, 0) -- safety
        else
            baseWeight = 1  -- fallback base weight if none found
        end
        baseWeightMap[tool] = baseWeight
    end

    -- Calculate new weight
    local newWeight = baseWeight + (0.33 * newAge)
    -- Round to 2 decimals
    newWeight = math.floor(newWeight * 100 + 0.5) / 100

    -- Construct new name
    local newName = baseName .. string.format(" [%.2f KG] [Age %d]", newWeight, newAge)

    -- Set new name
    tool.Name = newName
end

-- Update GUI pet name to display only relevant fields
local function updateGUI()
    local pet = getEquippedPetTool()
    if pet then
        local name = pet.Name
        local baseName = name:match("^(.-)%s*%[") or name
        local kg = name:match("%[(%d+%.?%d*)%s*KG%]")
        local age = name:match("%[Age%s*(%d+)%]")

        local displayName = baseName
        if kg then
            displayName = displayName .. " [" .. kg .. " KG]"
        end
        if age then
            displayName = displayName .. " [Age " .. age .. "]"
        end

        petInfo.Text = "Equipped Pet: " .. displayName
    else
        petInfo.Text = "Equipped Pet: [None]"
    end
end

-- Set Age to 50 Button Logic with age cap at 100
button.MouseButton1Click:Connect(function()
    local tool = getEquippedPetTool()
    if tool then
        for i = 20, 1, -1 do
            button.Text = "Changing Age in " .. i .. "..."
            task.wait(1)
        end

        local newAge = 50
        if newAge > 100 then newAge = 100 end -- safety clamp
        updatePetName(tool, newAge)
        updateGUI()
        button.Text = "Set Age to 50"
    else
        button.Text = "No Pet Equipped!"
        task.wait(2)
        button.Text = "Set Age to 50"
    end
end)

-- Add +1 Age Button Logic with 100 max limit
addAgeButton.MouseButton1Click:Connect(function()
    local tool = getEquippedPetTool()
    if tool then
        local currentAge = tonumber(tool.Name:match("%[Age%s(%d+)%]"))
        if currentAge and currentAge < 100 then
            for i = 5, 1, -1 do
                addAgeButton.Text = "Adding +1 in " .. i .. "..."
                task.wait(1)
            end
            local newAge = currentAge + 1
            if newAge > 100 then newAge = 100 end
            updatePetName(tool, newAge)
            updateGUI()
            addAgeButton.Text = "Add +1 Age"
        elseif currentAge and currentAge >= 100 then
            addAgeButton.Text = "Max Age is 100!"
            task.wait(2)
            addAgeButton.Text = "Add +1 Age"
        else
            addAgeButton.Text = "Invalid Age Format!"
            task.wait(2)
            addAgeButton.Text = "Add +1 Age"
        end
    else
        addAgeButton.Text = "No Pet Equipped!"
        task.wait(2)
        addAgeButton.Text = "Add +1 Age"
    end
end)

-- Auto refresh equipped pet display every second
task.spawn(function()
    while true do
        updateGUI()
        task.wait(1)
    end
end)
