-- Modern Button Function
local function createButton(text, posY)
    local btn = Instance.new("TextButton", frame)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 16
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.BackgroundColor3 = Color3.fromRGB(60, 120, 255)
    btn.BackgroundTransparency = 0.15
    btn.Size = UDim2.new(0, 240, 0, 38)
    btn.Position = UDim2.new(0.5, -120, 0, posY)

    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 10)

    local btnStroke = Instance.new("UIStroke", btn)
    btnStroke.Color = Color3.fromRGB(255, 255, 255)
    btnStroke.Thickness = 1.2
    btnStroke.Transparency = 0.4

    -- Hover effect
    btn.MouseEnter:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(80, 140, 255)
    end)
    btn.MouseLeave:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(60, 120, 255)
    end)

    return btn
end

-- Buttons
local button = createButton("Set Age to 50", 86)
local addAgeButton = createButton("Add +1 Age", 132)

-- Footer Label
local footer = Instance.new("TextLabel", frame)
